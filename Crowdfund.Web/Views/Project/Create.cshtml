@model Crowdfund.Core.Model.Options.CreateProjectOptions

<form class="js-create-project" method="post"
      action="@Url.Action("CreateProject", "Project")">

    <div class="form-row">

        <div class="form-group col-md-4">
            <label for="@Html.IdFor(p => p.Title)">Project Title</label>
            @Html.TextBoxFor(p => p.Title,
                new { @class = "form-control js-title", placeholder = "enter project title" })
        </div>

        @*<div class="form-group col-md-4">
                <label for="@Html.IdFor(p => p.OwnerId)"> Your Id</label>
                @Html.TextBoxFor(p => p.OwnerId,
                    new { @class = "form-control js-id", placeholder = "enter id" })
            </div>*@

    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="@Html.IdFor(p => p.Description)">Description</label>
            @Html.TextBoxFor(p => p.Description,
                new { @class = "form-control js-description", placeholder = "enter project description" })
        </div>


        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="@Html.IdFor(p => p.projectcategory)"> Category</label>
                @Html.TextBoxFor(p => p.projectcategory,
                    new { @class = "form-control js-category ", placeholder = "Select Category" })
            </div>

        </div>

    </div>
    <button type="button" class="btn btn-primary js-submit-project">Submit</button>
</form>

<div class="alert alert-danger js-create-project-alert" role="alert"
         style="display: none">
    </div>

    <div class="alert alert-success js-create-project-success" role="alert"
         style="display: none">
    </div>